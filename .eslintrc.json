{
  "extends": ["@rocketseat/eslint-config/node"],
  "rules": {
    "prettier/prettier": ["error", {
      "singleQuote": true,
      "printWidth": 130, // Desktop: 190 <==> Notebook: 130
      "tabWidth": 2,
      "useTabs": true,
      "semi": true,
      "jsxSingleQuote": true,
      "trailingComma": "es5",
      "bracketSpacing": true,
      "arrowFunctionParens": "always",
      "bracketLine": true,
      "endOfLine": "auto"
    }],
    "no-undef": "off",
    "camelcase": "off",
    "no-unused-vars": "off",
    "no-useless-constructor": "off",
    "@typescript-eslint/no-unused-vars": "warn"
  }
}